<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Issue Book - LibraryHub</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/issueBook.css"> <!-- Link to the external CSS file -->
</head>
<body>
    <h1>Issue Book</h1>
    <%- include("./partials/navbar") %>
 <!-- Issue Book Form -->
    <div class="issue-book-container">
        <h1>Issue a Book</h1>
        <form class="issue-book-form" action="/issue-book" method="POST">
            <label for="userId">User ID:</label>
            <input type="number" id="userId" name="userId" placeholder="Enter User ID" required>

            <label for="bookId">Book IDs:</label>
            <input type="text" id="bookIds" name="bookIds" placeholder="Enter Book IDs" required>

            <label for="dueDate">Due Date:</label>
            <input type="date" id="dueDate" name="dueDate" required>

            <button type="submit">Issue Book</button>
        </form>
    </div>
    <script>
        // Function to display a message on the home page
        function showMessage() {
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            const type = urlParams.get('type');
    
            if (message) {
                // Create a message element
                const messageElement = document.createElement('div');
                messageElement.textContent = `${type === 'error' ? 'Error: ' : 'Success: '}${message}`;
                messageElement.style.position = 'fixed';
                messageElement.style.top = '20px';
                messageElement.style.left = '50%';
                messageElement.style.transform = 'translateX(-50%)';
                messageElement.style.padding = '10px 20px';
                messageElement.style.backgroundColor = type === 'error' ? '#ffebee' : '#e8f5e9';
                messageElement.style.color = type === 'error' ? '#c62828' : '#2e7d32';
                messageElement.style.border = `1px solid ${type === 'error' ? '#c62828' : '#2e7d32'}`;
                messageElement.style.borderRadius = '5px';
                messageElement.style.zIndex = '1000';
                messageElement.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1)';
    
                // Append the message element to the body
                document.body.appendChild(messageElement);
    
                // Remove the message after 3 seconds
                setTimeout(() => {
                    document.body.removeChild(messageElement);
                }, 3000);
            }
        }
    
        // Call the function when the page loads
        window.onload = showMessage;
    </script>
</body>
</html>